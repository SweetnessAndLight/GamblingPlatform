<Window x:Class="GamblingPlatform.OpenFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenFile" Height="150" Width="530" ResizeMode="NoResize" xmlns:dxpg="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="6,10,0,0" Name="tb_FilePath" 
                 VerticalAlignment="Top" Width="393" FontSize="16"  Background="White"/>
        <Button Content="Browse" Height="32" HorizontalAlignment="Right" Margin="0,10,15,0" 
                Name="btn_Browse" VerticalAlignment="Top" Width="88" Click="btn_Browse_Click" />
    </Grid>
</Window>
